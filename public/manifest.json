  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "wine",
      "url": "/wine?id=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".wine", ".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "permissions": [
    "camera",
    "geolocation",
    "notifications",
    "persistent-storage"
  ],
  
  "features": [
    "Cross Origin Embedder Policy",
    "WebAssembly",
    "Web Share API",
    "Background Sync",
    "Push Notifications",
    "Offline Storage",
    "Camera Access",
    "Geolocation",
    "Haptic Feedback"
  ],
  
  "iarc_rating_id": "",
  
  "custom": {
    "wine_data_version": "2.0",
    "supported_formats": ["jpg", "png", "webp"],
    "offline_storage_limit": "100MB",
    "sync_frequency": "daily",
    "analytics_enabled": true,
    "haptic_feedback": true,
    "ar_features": false,
    "social_features": true,
    "gamification": {
      "levels": true,
      "badges": true,
      "leaderboards": true,
      "achievements": true
    }
  }
}